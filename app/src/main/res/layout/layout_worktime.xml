<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#1D1D22">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:gravity="left|center_vertical"
        android:background="#16161A">

        <TextView
            android:id="@+id/textview_time"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="09:00 ~ 11:00"
            android:textColor="#00B99C"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="#16161A"/>

        <TextView
            android:id="@+id/textview_Line"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:text="113462"
            android:textColor="#ffffff"/>


        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:background="#16161A"/>

        <TextView
            android:id="@+id/textview_Model"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:paddingLeft="3dp"
            android:text="AP-1516D(MY-700010)"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/item_worker"/>

    </LinearLayout>



</LinearLayout>